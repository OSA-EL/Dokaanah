@model List<Dokaanah.Models.Product>

@{
    ViewData["Title"] = "Home D";
}







<html>
    
  <div id="DokkanahcarouselIndicator" class="carousel slide container-fluid carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#DokkanahcarouselIndicator" data-bs-slide-to="0" class="active"
        aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#DokkanahcarouselIndicator" data-bs-slide-to="1"
        aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#DokkanahcarouselIndicator" data-bs-slide-to="2"
        aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="~/images/slider/0ne.jpg" class="d-block w-100" alt="one">
        <div class="carousel-caption d-none d-md-block">

        </div>
      </div>
      <div class="carousel-item">
        <img src="~/images/slider/main2 (1).jpg" class="d-block w-100" alt="two">
        <div class="carousel-caption d-none d-md-block">

        </div>
      </div>
      <div class="carousel-item">
        <img src="~/images/slider/main3.jpg" class="d-block w-100" alt="three">
        <div class="carousel-caption d-none d-md-block">

        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#DokkanahcarouselIndicator"
      data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#DokkanahcarouselIndicator"
      data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  

  <!-- ========================= Features Section start======[3]========================== -->
  <section class="features pt-5 pb-5 bg-light">
    <div class="container text-center">
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-3 d-flex flex-column align-items-center p-3">
          <img src="~/images/features/free-delivery.png" class="img-fluid" alt="">
          <h4 class="mt-3 mb-2">Free Shipping</h4>
          <p>Free Shipping on All Orders</p>
        </div>
        <div class="col-md-6 col-lg-3 d-flex flex-column align-items-center p-3">
          <img src="~/images/features/reimbursement.png" class="img-fluid" alt="">
          <h4 class="mt-3 mb-2">Money guarantee</h4>
          <p>30 Day Money Back</p>
        </div>
        <div class="col-md-6 col-lg-3 d-flex flex-column align-items-center p-3">
          <img src="~/images/features/support.png" class="img-fluid" alt="">
          <h4 class="mt-3 mb-2">Online Support</h4>
          <p>Technical Support</p>
        </div>
        <div class="col-md-6 col-lg-3 d-flex flex-column align-items-center p-3">
          <img src="~/images/features/securePay.png" class="img-fluid" alt="">
          <h4 class="mt-3 mb-2">Secure Payment</h4>
          <p>Encrypted Payment</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ========================= Category Section Start========[4]======================== -->

  <section class="text-center container wow fadeIn">

    <!-- Grid row -->
    <div class="row">

      <div class="col-lg-4 col-md-12 mb-3">

        <div class="view overlay z-depth-1-half">
          <div class="glass_hover"></div>
          <a asp-action="Shop" asp-route-catName="Women"></a>
          <img src="~/images/General/WomenCategory.jpg" class="img-fluid" alt="">
          <div class="content">
            <h1 class="text-nowrap">WOMEN Collection</h1>
          </div>
        </div>

      </div>

      <div class="col-lg-4 col-md-6 mb-3">

        <div class="view overlay z-depth-1-half">
          <div class="glass_hover"></div>
          <a asp-controller="Categories" asp-action="GetProductsForCategory" asp-route-id="3"></a>
          <img src="~/images/General/kidsCategory.jpg" class="img-fluid" alt="">
          <div class="content">
            <h1 class="text-nowrap">Kids COLLECTION</h1>
          </div>
        </div>

      </div>

      <div class="col-lg-4 col-md-6 mb-3">

        <div class="view overlay z-depth-1-half">
          <div class="glass_hover"></div>
          <a asp-controller="Categories" asp-action="GetProductsForCategory" asp-route-id="1"></a>
          <img src="~/images/General/Men Category.jpg" class="img-fluid" alt="">
          <div class="content">
            <h1 class="text-nowrap">MEN Collection</h1>
          </div>
        </div>

      </div>

    </div>


    <div class="row">

      <div class="col-md-6 mb-3">

        <div class="view overlay z-depth-1-half">
          <img src="~/images/banner/All Category.jpg" class="img-fluid" alt="">
          <a asp-controller="Home" asp-action="Shop"></a>
          <div class="content">
            <h1>All Categories</h1>
          </div>
        </div>

      </div>


      <div class="col-md-6 mb-3">

        <div class="view overlay z-depth-1-half">
          <img src="~/images/banner/comming-soon.jpg" class="img-fluid" alt="">
          <div class="content">
            <h1>Suits for Men <br>
              <small>Comming Soon</small< /h1>
          </div>
        </div>

      </div>



    </div>

  </section>

  <!--================================== Start Top Seller Section=====[5]================== -->

 <div class="top-seller-product m-5 wow fadeInDown">
        <div class="container display-header pb-4">
            <h3 class="mt-3 fw-bold" style="color: #1C486F;">Best Selling <span style="color:#EF8121;">Items</span> </h3>
            <hr class="hr-btm">
        </div>
        <div class="swiper Bolla container">
            <div class="swiper-wrapper" id="slider-top-selled">
                <!-- Product cards -->
                        @foreach (var product in Model)
                        {
                            <div class="swiper-slide">
                                <div class="col">
                                        <div class="product-item hover-effect-slide">
                                            <div class="image-holder position-relative">
                                                <img src="@product.ImgUrl" alt="Blouse" class="product-image img-fluid">
                                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn-icon btn-eye-con">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <span class="btn btn-dark w-100 mt-2 rounded-3 add-cart-btnnn">Add to cart</span>
                                            </div>
                                            <div class="product-content position-relative">
                                                <h5 class="product-name text-uppercase fs-5 mt-3">
                                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">@product.Name</a>
                                                </h5>
                                                <div class="product-price">
                                                    <span class="new-price">$@product.Price</span>
                                                    <span class="old-price">$@((@product.Price) * (1.75))</span>
                                                </div>
                                                <div class="product-star">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </div>
                                            </div>
                                        </div>
                                </div>
                            </div>
                        }

            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
  <!--================================== End Top Seller Section======================= -->



  <!-- ========================= Dicount Section Start============[6]==================== -->

  <section class="dicount-6thSection">
    <div class="container-fluid banner-section my-5">
      <div class="container py-5">
        <div class="row g-4 align-items-center">
          <div class="col-lg-6 ">
            <div class="py-4 discount-cont >
              <p class=" DealofTodat">Deal of Today</p>
              <h3 class="nameofOffer">Beautiful Dress For Women</h3>
              <p class="mb-4 ">Awesome offer , Don't Miss it .</p>
              <h1 class="price-dicount">1200 L.E <s>1890 L.E</s></h1>

              <a href="#" class="banner-btn btn ">Shop now</a>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="position-relative">
              <img src="~/images/banner/bannerdiscount.jpg" class="img-fluid w-100 rounded" alt="">

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ====================== Our Brands Section =============[7]===================== -->

  <section id="clients">
    <div class="container " data-aos="zoom-in">

      <header class="section-header">
        <!-- <h3>Variety of Brands</h3> -->
      </header>

      <div class="clients-slider swiper">
        <div class="swiper-wrapper align-items-center">
          <div class="swiper-slide"><img src="~/images/brands/american-apparel.png" class="img-fluid" alt=""></div>
          <div class="swiper-slide"><img src="~/images/brands/american-eagle-outfitters-logo-black-and-white.png"
              class="img-fluid" alt=""></div>
          <div class="swiper-slide"><img src="~/images/brands/calvin-klein-logo.png" class="img-fluid" alt=""></div>
          <div class="swiper-slide"><img src="~/images/brands/addidas.png" class="img-fluid" alt=""></div>
          <div class="swiper-slide"><img src="~/images/brands/converse-logo-black-and-white-1.png" class="img-fluid"
              alt=""></div>
          <div class="swiper-slide"><img src="~/images/brands/Zara_(retailer)-Logo.wine.png" class="img-fluid" alt="">
          </div>
          <div class="swiper-slide"><img src="~/images/brands/american-apparel.png" class="img-fluid" alt=""></div>
          <div class="swiper-slide"><img src="~/images/brands/chanel-logo.png" class="img-fluid" alt=""></div>
        </div>

      </div>


    </div>
  </section>
  <hr class="mb-5">
  <!--================================== End Brands Section======================= -->




  <!-- ========================= newsletter Section Start==========[8]====================== -->
  <section class="shop-newsletter section">
    <div class="containerclass">
      <div class="inner-top">
        <div class="row">
          <div class="col-lg-8 offset-lg-2 col-12">
            <!-- Start  -->
            <div class="inner">
              <h4>Newsletter</h4>
              <p> Subscribe to our newsletter and get <span>10%</span> off your first purchase</p>
              <form action="mail/mail.php" method="get" target="_blank" class="newsletter-inner">
                <input name="EMAIL" placeholder="Your email address" required="" type="email">
                <button class="btn">Subscribe</button>
              </form>
            </div>
            <!-- End  Inner -->
          </div>
        </div>
      </div>
    </div>
  </section>

</html>